<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.edu.agh.kis.retrofit2demo.exercises.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="@string/add_student_btn_val"
            android:onClick="showNewStudentDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addStudentBtn"
            android:layout_gravity="center"/>

        <Button
            android:text="@string/get_students_btn_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGetAllStudents"
            android:layout_gravity="center"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/studentsListView"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false" />
    </LinearLayout>

</RelativeLayout>
